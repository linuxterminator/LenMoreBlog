<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huqingshan.LenMore.repository.dao.TagRepository">

    <resultMap id="tagList" type="Tag">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <select id="findAll" resultMap="tagList">
        select * from tag;
    </select>

    <insert id="add">

    </insert>

    <update id="update">

    </update>

    <select id="findByPrimaryKey" resultType="Tag">
        select * from tag where id = #{id}
    </select>

    <delete id="deleteByPrimaryKey">
        delete from tag where id = #{id}
    </delete>

    <select id="findByName" resultType="Tag">
        select * from tag where name = #{name}
    </select>

</mapper>